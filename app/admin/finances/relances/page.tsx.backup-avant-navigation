'use client'

import { useState, useEffect } from 'react'
import Link from 'next/link'
import { getDashboardRelances } from '@/lib/firebase/relances-stats'
import type { DashboardRelances } from '@/lib/firebase/relances-types'
import { 
  Settings,
  FileText,
  TrendingUp,
  TrendingDown,
  DollarSign,
  Calendar,
  AlertCircle,
  Send,
  Clock,
  Target,
  BarChart3,
  ArrowLeft
} from 'lucide-react'

export default function RelancesDashboardPage() {
  const [loading, setLoading] = useState(true)
  const [dashboard, setDashboard] = useState<DashboardRelances | null>(null)

  useEffect(() => {
    loadDashboard()
  }, [])

  async function loadDashboard() {
    try {
      setLoading(true)
      const data = await getDashboardRelances()
      setDashboard(data)
    } catch (error) {
      console.error('Erreur chargement dashboard:', error)
    } finally {
      setLoading(false)
    }
  }

  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-900"></div>
      </div>
    )
  }

  if (!dashboard) {
    return (
      <div className="p-6 max-w-7xl mx-auto">
        <div className="bg-red-50 border border-red-200 rounded-lg p-4">
          <p className="text-red-800">Erreur de chargement du dashboard</p>
        </div>
      </div>
    )
  }

  const stats = dashboard.statistiques

  return (
    <div className="p-6 max-w-7xl mx-auto">
      {/* Header */}
      <div className="mb-8">
        <div className="flex items-center gap-4 mb-4">
          <Link 
            href="/admin"
            className="flex items-center gap-2 text-gray-600 hover:text-gray-900"
          >
            <ArrowLeft className="w-5 h-5" />
            Admin
          </Link>
        </div>

        <div className="flex items-center justify-between">
          <div>
            <h1 className="text-3xl font-bold text-gray-900">Relances Automatiques</h1>
            <p className="text-gray-600 mt-2">
              Gestion intelligente des impayés et recouvrement
            </p>
          </div>

          <div className="flex gap-3">
            <Link
              href="/admin/finances/relances/configuration"
              className="flex items-center gap-2 px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300"
            >
              <Settings className="w-5 h-5" />
              Configuration
            </Link>
            <Link
              href="/admin/finances/relances/templates"
              className="flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700"
            >
              <FileText className="w-5 h-5" />
              Templates
            </Link>
          </div>
        </div>
      </div>

      {/* Alertes */}
      {dashboard.alertes.length > 0 && (
        <div className="mb-6 space-y-3">
          {dashboard.alertes.map((alerte, index) => (
            <div
              key={index}
              className={`p-4 rounded-lg flex items-center gap-3 ${
                alerte.type === 'critique'
                  ? 'bg-red-50 border border-red-200 text-red-800'
                  : alerte.type === 'avertissement'
                  ? 'bg-yellow-50 border border-yellow-200 text-yellow-800'
                  : 'bg-blue-50 border border-blue-200 text-blue-800'
              }`}
            >
              <AlertCircle className="w-5 h-5 flex-shrink-0" />
              <span>{alerte.message}</span>
            </div>
          ))}
        </div>
      )}

      {/* KPIs Principaux */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        {/* Impayés Total */}
        <div className="bg-white rounded-lg shadow p-6">
          <div className="flex items-center justify-between mb-2">
            <div className="flex items-center gap-2">
              <DollarSign className="w-5 h-5 text-red-600" />
              <h3 className="font-semibold text-gray-700">Impayés Total</h3>
            </div>
          </div>
          <p className="text-3xl font-bold text-red-600">
            {stats.montantTotalImpaye.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
          </p>
          <p className="text-sm text-gray-500 mt-2">
            {stats.nombreFacturesImpayees} facture{stats.nombreFacturesImpayees > 1 ? 's' : ''}
          </p>
        </div>

        {/* DSO */}
        <div className="bg-white rounded-lg shadow p-6">
          <div className="flex items-center justify-between mb-2">
            <div className="flex items-center gap-2">
              <Clock className="w-5 h-5 text-orange-600" />
              <h3 className="font-semibold text-gray-700">DSO</h3>
            </div>
          </div>
          <p className="text-3xl font-bold text-orange-600">
            {stats.dso} j
          </p>
          <p className="text-sm text-gray-500 mt-2">
            Délai moyen paiement
          </p>
        </div>

        {/* Taux Recouvrement */}
        <div className="bg-white rounded-lg shadow p-6">
          <div className="flex items-center justify-between mb-2">
            <div className="flex items-center gap-2">
              <Target className="w-5 h-5 text-green-600" />
              <h3 className="font-semibold text-gray-700">Recouvrement</h3>
            </div>
          </div>
          <p className="text-3xl font-bold text-green-600">
            {stats.tauxRecouvrement.toFixed(1)}%
          </p>
          <p className="text-sm text-gray-500 mt-2">
            {stats.montantRecouvrePeriode.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })} récupéré
          </p>
        </div>

        {/* Relances Envoyées */}
        <div className="bg-white rounded-lg shadow p-6">
          <div className="flex items-center justify-between mb-2">
            <div className="flex items-center gap-2">
              <Send className="w-5 h-5 text-indigo-600" />
              <h3 className="font-semibold text-gray-700">Relances</h3>
            </div>
          </div>
          <p className="text-3xl font-bold text-indigo-600">
            {stats.nombreRelancesEnvoyees}
          </p>
          <p className="text-sm text-gray-500 mt-2">
            Ce mois-ci
          </p>
        </div>
      </div>

      {/* Impayés par Ancienneté */}
      <div className="bg-white rounded-lg shadow p-6 mb-8">
        <h2 className="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
          <BarChart3 className="w-6 h-6 text-indigo-600" />
          Impayés par Ancienneté
        </h2>

        <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
          {/* 0-30 jours */}
          <div className="p-4 bg-blue-50 border-l-4 border-blue-500 rounded">
            <div className="flex items-center justify-between mb-2">
              <span className="text-sm font-medium text-blue-700">0-30 jours</span>
              <span className="text-xs text-blue-600">{stats.impaye0_30j.nombre} factures</span>
            </div>
            <p className="text-2xl font-bold text-blue-700">
              {stats.impaye0_30j.montant.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
            </p>
          </div>

          {/* 30-60 jours */}
          <div className="p-4 bg-yellow-50 border-l-4 border-yellow-500 rounded">
            <div className="flex items-center justify-between mb-2">
              <span className="text-sm font-medium text-yellow-700">30-60 jours</span>
              <span className="text-xs text-yellow-600">{stats.impaye30_60j.nombre} factures</span>
            </div>
            <p className="text-2xl font-bold text-yellow-700">
              {stats.impaye30_60j.montant.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
            </p>
          </div>

          {/* 60-90 jours */}
          <div className="p-4 bg-orange-50 border-l-4 border-orange-500 rounded">
            <div className="flex items-center justify-between mb-2">
              <span className="text-sm font-medium text-orange-700">60-90 jours</span>
              <span className="text-xs text-orange-600">{stats.impaye60_90j.nombre} factures</span>
            </div>
            <p className="text-2xl font-bold text-orange-700">
              {stats.impaye60_90j.montant.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
            </p>
          </div>

          {/* +90 jours */}
          <div className="p-4 bg-red-50 border-l-4 border-red-500 rounded">
            <div className="flex items-center justify-between mb-2">
              <span className="text-sm font-medium text-red-700">+90 jours</span>
              <span className="text-xs text-red-600">{stats.impayePlus90j.nombre} factures</span>
            </div>
            <p className="text-2xl font-bold text-red-700">
              {stats.impayePlus90j.montant.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
            </p>
          </div>
        </div>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        {/* Factures Critiques */}
        <div className="bg-white rounded-lg shadow p-6">
          <h2 className="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
            <AlertCircle className="w-6 h-6 text-red-600" />
            Factures Critiques
          </h2>

          {dashboard.facturesCritiques.length === 0 ? (
            <p className="text-gray-500 text-center py-8">
              Aucune facture critique
            </p>
          ) : (
            <div className="space-y-3">
              {dashboard.facturesCritiques.slice(0, 5).map((facture) => (
                <div
                  key={facture.factureId}
                  className="p-4 border rounded-lg hover:bg-gray-50"
                >
                  <div className="flex items-start justify-between gap-4">
                    <div className="flex-1 min-w-0">
                      <p className="font-semibold text-gray-900 truncate">
                        {facture.clientNom}
                      </p>
                      <p className="text-sm text-gray-600">
                        Facture {facture.factureNumero}
                      </p>
                    </div>
                    <div className="text-right">
                      <p className="font-bold text-red-600">
                        {facture.montant.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
                      </p>
                      <p className="text-xs text-gray-500">
                        {facture.joursRetard}j retard
                      </p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}

          {dashboard.facturesCritiques.length > 5 && (
            <Link
              href="/admin/finances/relances/factures-critiques"
              className="block text-center mt-4 text-sm text-indigo-600 hover:underline"
            >
              Voir toutes les factures critiques ({dashboard.facturesCritiques.length})
            </Link>
          )}
        </div>

        {/* Relances à Envoyer Aujourd'hui */}
        <div className="bg-white rounded-lg shadow p-6">
          <h2 className="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
            <Send className="w-6 h-6 text-indigo-600" />
            Relances du Jour
          </h2>

          {dashboard.relancesAEnvoyer.length === 0 ? (
            <p className="text-gray-500 text-center py-8">
              ✅ Aucune relance à envoyer aujourd'hui
            </p>
          ) : (
            <div className="space-y-3">
              {dashboard.relancesAEnvoyer.slice(0, 5).map((relance) => (
                <div
                  key={relance.id}
                  className="p-4 border rounded-lg hover:bg-gray-50"
                >
                  <div className="flex items-start justify-between gap-4">
                    <div className="flex-1 min-w-0">
                      <p className="font-semibold text-gray-900 truncate">
                        {relance.clientNom}
                      </p>
                      <p className="text-sm text-gray-600">
                        Facture {relance.factureNumero}
                      </p>
                      <span className={`inline-block mt-1 px-2 py-0.5 text-xs rounded ${
                        relance.type === 'rappel_amiable' 
                          ? 'bg-blue-100 text-blue-700'
                          : relance.type === 'relance_ferme'
                          ? 'bg-orange-100 text-orange-700'
                          : relance.type === 'mise_en_demeure'
                          ? 'bg-red-100 text-red-700'
                          : 'bg-purple-100 text-purple-700'
                      }`}>
                        {relance.type.replace('_', ' ')}
                      </span>
                    </div>
                    <div className="text-right">
                      <p className="font-bold text-gray-900">
                        {relance.factureResteAPayer.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
                      </p>
                      <span className={`inline-block mt-1 px-2 py-0.5 text-xs rounded ${
                        relance.statut === 'planifiee'
                          ? 'bg-green-100 text-green-700'
                          : 'bg-yellow-100 text-yellow-700'
                      }`}>
                        {relance.statut}
                      </span>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}

          {dashboard.relancesAEnvoyer.length > 5 && (
            <Link
              href="/admin/finances/relances/envoi"
              className="block text-center mt-4 text-sm text-indigo-600 hover:underline"
            >
              Voir toutes les relances ({dashboard.relancesAEnvoyer.length})
            </Link>
          )}
        </div>
      </div>

      {/* Prévisions Encaissements */}
      <div className="bg-white rounded-lg shadow p-6 mb-8">
        <h2 className="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
          <Calendar className="w-6 h-6 text-indigo-600" />
          Prévisions d'Encaissements
        </h2>

        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div className="p-4 bg-green-50 rounded-lg border border-green-200">
            <p className="text-sm text-green-700 mb-1">7 prochains jours</p>
            <p className="text-2xl font-bold text-green-700">
              {dashboard.previsions.encaissementsAttendus7j.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
            </p>
          </div>

          <div className="p-4 bg-blue-50 rounded-lg border border-blue-200">
            <p className="text-sm text-blue-700 mb-1">15 prochains jours</p>
            <p className="text-2xl font-bold text-blue-700">
              {dashboard.previsions.encaissementsAttendus15j.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
            </p>
          </div>

          <div className="p-4 bg-indigo-50 rounded-lg border border-indigo-200">
            <p className="text-sm text-indigo-700 mb-1">30 prochains jours</p>
            <p className="text-2xl font-bold text-indigo-700">
              {dashboard.previsions.encaissementsAttendus30j.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 })}
            </p>
          </div>
        </div>
      </div>

      {/* Liens rapides */}
      <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
        <Link
          href="/admin/finances/relances/historique"
          className="p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow"
        >
          <div className="flex items-center gap-3 mb-2">
            <FileText className="w-6 h-6 text-indigo-600" />
            <h3 className="font-semibold text-gray-900">Historique</h3>
          </div>
          <p className="text-sm text-gray-600">
            Consulter l'historique complet des relances envoyées
          </p>
        </Link>

        <Link
          href="/admin/finances/relances/clients"
          className="p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow"
        >
          <div className="flex items-center gap-3 mb-2">
            <Settings className="w-6 h-6 text-indigo-600" />
            <h3 className="font-semibold text-gray-900">Clients</h3>
          </div>
          <p className="text-sm text-gray-600">
            Configurer les relances par client
          </p>
        </Link>

        <Link
          href="/admin/finances/relances/statistiques"
          className="p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow"
        >
          <div className="flex items-center gap-3 mb-2">
            <BarChart3 className="w-6 h-6 text-indigo-600" />
            <h3 className="font-semibold text-gray-900">Statistiques</h3>
          </div>
          <p className="text-sm text-gray-600">
            Analyses détaillées et exports
          </p>
        </Link>
      </div>
    </div>
  )
}
